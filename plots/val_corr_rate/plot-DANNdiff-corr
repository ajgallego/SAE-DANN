set arrow 2 from 0.6075,2.65 to 1.077,2.65 nohead lc rgb "purple" lw 1

set label 11 source_sal_text at 0.77, 3.82 left nopoint tc rgb "#28BAFC" font ",17.65"
set label 12 source_dib_text at 0.77, 3.18 left nopoint tc rgb "#D99A23" font ",17.65"
