set arrow 6 from -0.2,1 to 1.1,1 nohead dt "." lw 2


plot \
        "+" u 1:(NaN) title " " w dots linecolor rgb "white",\
        'data-difff1-corr.txt' using 2:1 with point ls 1 title dib_label,\
